{
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "mode": "release"
  },
  "database": {
    "host": "${DB_HOST}",
    "port": 5432,
    "user": "${DB_USER}",
    "password": "${DB_PASSWORD}",
    "name": "${DB_NAME}",
    "sslmode": "require",
    "timezone": "Asia/Ho_Chi_Minh",
    "max_open_conns": 50,
    "max_idle_conns": 10,
    "conn_max_lifetime": "10m"
  },
  "jwt": {
    "secret": "${JWT_SECRET}",
    "access_token_expiry": "15m",
    "refresh_token_expiry": "7d"
  },
  "storage": {
    "type": "s3",
    "path": "/app/storage/uploads",
    "max_file_size_mb": 100
  },
  "cors": {
    "allowed_origins": [
      "https://filesharing.com",
      "https://www.filesharing.com"
    ]
  },
  "logging": {
    "level": "info",
    "format": "json",
    "output": "stdout"
  },
  "cleanup": {
    "cron": "0 0 * * *",
    "secret": "${CLEANUP_SECRET}"
  },
  "swagger": {
    "enabled": false
  },
  "metrics": {
    "enabled": true,
    "port": 9090
  }
}
