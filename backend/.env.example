# Server Configuration
APP_NAME=File Sharing System
APP_ENV=development
APP_PORT=8080
APP_HOST=0.0.0.0

# Database Configuration
# DB_HOST=postgres if run Docker, else localhost
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=file_sharing_db
DB_SSLMODE=disable
DB_TIMEZONE=Asia/Ho_Chi_Minh
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# TOTP Configuration
TOTP_ISSUER=File Sharing System
TOTP_PERIOD=30
TOTP_DIGITS=6

# File Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=./storage/uploads
MAX_FILE_SIZE_MB=50
ALLOWED_MIME_TYPES=*

# Cloud Storage Configuration
CLOUD_STORAGE_ENABLED=true
CLOUD_STORAGE_PROVIDER=azure
CLOUD_STORAGE_ENDPOINT=https://<account>.blob.core.windows.net
CLOUD_STORAGE_ACCESS_KEY=<storage-account-name>
CLOUD_STORAGE_SECRET_KEY=<account-key-hoáº·c-sas>
CLOUD_STORAGE_PUBLIC_CONTAINER=<public-container>
CLOUD_STORAGE_PRIVATE_CONTAINER=<private-container>
CLOUD_STORAGE_REGION=""

# System Policy Defaults
DEFAULT_VALIDITY_DAYS=7
MIN_VALIDITY_HOURS=1
MAX_VALIDITY_DAYS=30
MIN_PASSWORD_LENGTH=6

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_UPLOAD_PER_HOUR=10

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Cleanup Job
CLEANUP_CRON=0 0 * * *
CLEANUP_SECRET=your_cleanup_secret_here

# Redis (Optional - for caching/sessions)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Email (Optional - for notifications)
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@filesharing.com

# Monitoring & Metrics
METRICS_ENABLED=false
METRICS_PORT=9090

# Swagger/API Documentation
SWAGGER_ENABLED=true
SWAGGER_HOST=localhost:8080
SWAGGER_BASE_PATH=/api
